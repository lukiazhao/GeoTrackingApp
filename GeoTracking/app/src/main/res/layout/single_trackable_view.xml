<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/item_add_button"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="81dp"
        android:text="@string/add" />

    <TextView
        android:id="@+id/trackable_item"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="@string/textview"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trackable_item"
        android:text="@string/item_description" />

    <TextView
        android:id="@+id/item_url"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/item_add_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-26dp"
        android:text="@string/item_url" />

    <Button
        android:id="@+id/item_view_button"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/item_add_button"
        android:layout_alignTop="@+id/trackable_item"
        android:text="@string/view" />

</RelativeLayout>