<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddToTrackingActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="284dp"
        android:layout_height="381dp"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:labelFor="@+id/item_name"
            android:text="@string/TrackableName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/title"
            android:inputType="none|text" />

        <TextView
            android:id="@+id/start_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/target_start_time" />

        <Spinner
            android:id="@+id/select_start_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownWidth="match_parent" />

        <TextView
            android:id="@+id/target_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/target_end_time"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/target_end_time" />

        <TextView
            android:id="@+id/meet_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_meet_time" />

        <Spinner
            android:id="@+id/select_meet_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownWidth="match_parent" />

        <EditText
            android:id="@+id/edit_meet_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/meet_location"
            android:inputType="none|text" />

        <Button
            android:id="@+id/finish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finish" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>