<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trackingTitleTextView"
        android:layout_width="283dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="@string/textview"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trackingMeetTextView"
        android:layout_width="271dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trackingLocationTextView"
        android:text="@string/textview"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/trackingLocationTextView"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trackingTitleTextView"
        android:text="@string/textview"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="10sp" />

    <Button
        android:id="@+id/trackingEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/trackingTitleTextView"
        android:text="@string/singletrackingview_editbutton"
        android:textSize="10sp"
        android:focusable="false"/>

    <Button
        android:id="@+id/trackingViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/trackingTitleTextView"
        android:text="@string/singletrackingview_viewbutton"
        android:textSize="10sp"
        android:focusable="false"/>

</RelativeLayout>
